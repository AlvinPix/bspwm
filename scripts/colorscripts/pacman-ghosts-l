#!/usr/bin/env bash

# Pacman ghosts
#
# Author: Rob O'Leary
#

f=3 b=4

for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done

for i in {0..7}; do
    printf -v g$i %b "\e[9${i}m"
done

bd=$'\e[1m'
rt=$'\e[0m'
iv=$'\e[7m'


cat << EOF

  $f1    ██████        $f3    ██████        $f6    ██████        $f5    ██████
  $f1  ██████████      $f3  ██████████      $f6  ██████████      $f5  ██████████
  $f1██████████████    $f3██████████████    $f6██████████████    $f5██████████████
  $f1██$f7████$f1██$f7████$f1██    $f3██$f7████$f3██$f7████$f3██    $f6██$f7█$f0██$f7█$f6██$f7█$f0██$f7█$f6██    $f5██$f7████$f5██$f7████$f5██
  $f1██$f7█$f0██$f7█$f1██$f7█$f0██$f7█$f1██    $f3██$f7██$f0██$f3██$f7██$f0██$f3██    $f6██$f7████$f6██$f7████$f6██    $f5██$f0██$f7██$f5██$f0██$f7██$f5██
  $f1██████████████    $f3██████████████    $f6██████████████    $f5██████████████
  $f1██████████████    $f3██████████████    $f6██████████████    $f5██████████████
  $f1██  ██  ██  ██    $f3██  ██  ██  ██    $f6██  ██  ██  ██    $f5██  ██  ██  ██$rt
  
EOF
